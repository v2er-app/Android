<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseApp.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/AppActAnimation</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowReturnTransition">@android:transition/fade</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="DayTheme" parent="BaseApp.Theme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>

        <item name="page_bg_color">@color/default_page_bg</item>
        <item name="bodyTextColor">@color/bodyTextColor</item>
        <item name="hintTextColor">@color/hintTextColor</item>
        <item name="tag_bg_color">@color/tag_bg_color</item>
        <item name="quote_block_bg_color">#FFFAFAFA</item>
        <item name="fab_bg_color">#ffffff</item>
        <item name="banner_bg_color">#80FFFFFF</item>
        <item name="searchbar_bg_color">@color/white</item>
        <item name="tablayout_selected_color">#FF555555</item>
        <item name="tablayout_unselected_color">#66000000</item>
        <item name="tab_menu_bg_color">@color/white</item>
        <item name="icon_tint_color">#3B3A3A</item>
        <item name="android:actionOverflowButtonStyle">@style/ToolbarOverflowStyle</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="actionMenuTextColor">?attr/icon_tint_color</item>
        <item name="button_color">?attr/icon_tint_color</item>
        <item name="colorControlHighlight">?attr/hintTextColor</item>
        <item name="divider_color">#f4f2f2</item>
        <item name="android:listDivider">?attr/divider_color</item>
        <item name="dialog_bg_color">#FFFAFAFA</item>
        <item name="android:autofilledHighlight">@color/autofill_color</item>
    </style>

    <style name="NightTheme" parent="BaseApp.Theme">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorAccent">#FFA4A5A7</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>

        <item name="page_bg_color">@color/night_default_page_bg</item>
        <item name="bodyTextColor">@color/night_bodyTextColor</item>
        <item name="hintTextColor">@color/night_hintTextColor</item>
        <item name="tag_bg_color">@color/tag_bg_color_night</item>
        <item name="quote_block_bg_color">#80000000</item>
        <item name="fab_bg_color">#000000</item>
        <item name="banner_bg_color">#80000000</item>
        <item name="searchbar_bg_color">#000000</item>
        <item name="tablayout_selected_color">#FFA4A5A7</item>
        <item name="tablayout_unselected_color">#555555</item>
        <item name="tab_menu_bg_color">#151618</item>
        <item name="icon_tint_color">#A4A5A7</item>
        <item name="android:actionOverflowButtonStyle">@style/ToolbarOverflowStyle</item>
        <item name="android:colorControlNormal">#FFA4A5A7</item>
        <item name="actionMenuTextColor">?attr/icon_tint_color</item>
        <item name="button_color">?attr/icon_tint_color</item>
        <item name="colorControlHighlight">?attr/hintTextColor</item>
        <item name="divider_color">#202020</item>
        <item name="android:listDivider">?attr/divider_color</item>
        <item name="dialog_bg_color">#1d1d1b</item>
        <item name="android:autofilledHighlight">@color/autofill_color_night</item>
    </style>

    <style name="GalleryTheme" parent="NightTheme">
        <item name="android:actionOverflowButtonStyle">@style/GalleryToolbarOverflowStyle</item>
    </style>
    <style name="SplashTheme" parent="DayTheme">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="NoneSlideBackableTheme" parent="BaseApp.Theme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="DialogTheme" parent="DayTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowBackground">@drawable/confirm_dialog_bg</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="dialog_bg_color">#FFFAFAFA</item>
        <item name="divider_color">#f4f2f2</item>
    </style>

    <style name="NightDialogTheme" parent="NightTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowBackground">@drawable/confirm_dialog_bg</item>
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="dialog_bg_color">#1d1d1b</item>
        <item name="divider_color">#202020</item>
    </style>

    <style name="AppActAnimation">
        <!-- 新Activity进入 -->
        <item name="android:activityOpenEnterAnimation">@anim/open_enter_slide</item>
        <!-- 旧Activity进入 -->
        <item name="android:activityCloseEnterAnimation">@anim/close_enter_slide</item>
        <!-- 新Activity退出 -->
        <item name="android:activityCloseExitAnimation">@anim/close_exit_slide</item>
        <!-- 旧Activity退出 -->
        <item name="android:activityOpenExitAnimation">@anim/open_exit_slide</item>
    </style>


</resources>