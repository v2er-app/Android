<resources>

    <style name="TitleText" parent="BodyText">
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleText" parent="TitleText">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TinyTitleText" parent="TitleText">
        <item name="android:textSize">@dimen/microTextSize</item>
    </style>

    <style name="TinyTitleText.Light" parent="TinyTitleText">
        <item name="android:textColor">?attr/hintTextColor</item>
    </style>

    <style name="BodyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">?attr/bodyTextColor</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:lineSpacingMultiplier">1.20</item>
    </style>

    <style name="smallText" parent="BodyText">
        <item name="android:textSize">@dimen/microTextSize</item>
    </style>

    <style name="hintText" parent="smallText">
        <item name="android:textColor">?attr/hintTextColor</item>
    </style>

    <style name="TitleEditText" parent="TitleText">
        <item name="android:textColorHint">?attr/hintTextColor</item>
    </style>

    <style name="EditText" parent="BodyText">
        <item name="android:textColorHint">?attr/hintTextColor</item>
    </style>

    <style name="NormalBtn">
        <item name="android:background">@drawable/default_submit_btn_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:textColor">?attr/icon_tint_color</item>
    </style>

    <style name="Toolbar.SubTitleText" parent="Toolbar.TitleText">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">?attr/icon_tint_color</item>
    </style>

    <style name="BaseToolBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="subtitleTextAppearance">@style/Toolbar.SubTitleText</item>
    </style>

    <style name="AvatarImg">
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:transitionName">@string/share_element_avatar</item>
        <!--<item name="android:src">@drawable/avatar_placeholder_drawable</item>-->
        <item name="civ_border_color">@color/colorPrimary</item>
        <item name="civ_border_width">1dp</item>
    </style>

    <style name="TagView" parent="smallText">
        <item name="android:foreground">?android:selectableItemBackgroundBorderless</item>
        <item name="tagColor">?attr/tag_bg_color</item>
    </style>

    <style name="DialogButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textColor">?attr/bodyTextColor</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TopicTitle" parent="TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">6dp</item>
        <!--<item name="android:transitionName">@string/share_element_topic_title</item>-->
    </style>

    <style name="BaseRecyclerView">
        <item name="android:id">@id/base_recyclerview</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="ShareItem" parent="@style/BodyText">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ProItem" parent="@style/BodyText">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:background">@drawable/white_bg_top_divider</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:foreground">?android:selectableItemBackgroundBorderless</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="CSTablayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/tablayout_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tl_indicator_height">2.5dp</item>
        <item name="tl_indicator_color">?attr/tablayout_selected_color</item>
        <item name="tl_indicator_width_equal_title">true</item>
        <item name="tl_tab_padding">22dp</item>
        <item name="tl_tab_space_equal">true</item>
        <item name="tl_textSelectColor">?attr/tablayout_selected_color</item>
        <item name="tl_textUnselectColor">?attr/tablayout_unselected_color</item>
        <item name="tl_textsize">@dimen/mediumTextSize</item>
        <item name="tl_underline_color">?attr/colorPrimary</item>
        <item name="tl_underline_height">1.5dp</item>
    </style>

</resources>
